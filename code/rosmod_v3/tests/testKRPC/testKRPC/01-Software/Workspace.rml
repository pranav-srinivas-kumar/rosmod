/*
 * ROS Workspace Model
 */

// ROS Package - krpc
package krpc
{

    msg some_msg
    {
        string car_name
    }

    srv some_srv
    {
        request
        {
            int32 request_field1
            string request_field2
        }

        response
        {
            bool response_result1
            float64 response_result2
        }
    }
    
    // ROS Component - krpc_comp
    component krpc_comp : base
    {

        server <krpc/some_srv> my_server
	{
	    priority = 60;
	    deadline = 0.0001;
	}
	
	publisher <krpc/some_msg> my_publisher;

	timer timer0
	{
	    period = 1.0;
            priority = 55;
	    deadline = 0.0002;
	}
    }

    // Set of ROS Nodes in this package
    node krcp_node 
    {
        // Instantiating components in ROS node
        component<krpc/krpc_comp> krcp_comp_inst;
    }
}
