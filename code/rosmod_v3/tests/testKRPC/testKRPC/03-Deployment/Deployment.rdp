/*
 * ROSMOD Deployment Model
 */

// ROSMOD Hardware Model - Hardware
using Hardware;

// ROSMOD Hardware Instance - BBB_111
hardware_instance BBB_111
{
    properties
    {
        ref = "Hardware/BeagleboneBlack";
        ip_address = "10.1.1.1";
        username = "kelsier";
	sshkey = "~/.ssh/id_rsa";
        deployment_path = "/home/kelsier";
	init = "/home/kelsier/init.sh";
    }
    // ROSMOD Node Instance - krcp_node_111 
    node krcp_node_111
    {
        properties
        {
            priority = 55;
        }
       
        component_instance krpc_comp_inst
        { 

            properties
            {
                ref = "krpc/krpc_comp";
                scheduling_scheme = PFIFO;
                logging
                {
                    DEBUG = false;
                    INFO = true; 
                    WARNING = false;
                    ERROR = true;
                    CRITICAL = true;
                }  
            }
              
            port_instance some_fk_name
	    {
                ref = "krpc_comp/my_server";
                group = "G1";
	    }
        
            port_instance some_fk_name_2
	    {
                ref = "krpc_comp/my_publisher";
                group = "G563";
	    }
        }

    }
}

