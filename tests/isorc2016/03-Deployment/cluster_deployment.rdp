/*
 * ROSMOD Deployment Model
 */

// ROSMOD Hardware Model - cluster
using cluster;

// ROSMOD Node - NodeA 
node NodeA
{
  properties
  {
    ref = "cluster/BBB_321";
    priority = 50;
    cmd_args = "--tg_time 50 --max_data_length 400";		   
  }
  component_instance senderBCDE
  {
      properties
      {
	ref = "multi_node_sample/senderBCDE";
	scheduling_scheme = PFIFO;
	logging
	{
	  Is Periodic? = true;
	  Periodic Log Unit = 1000;
	}
      }
  }
  component_instance receiverA
  {
      properties
      {
	ref = "multi_node_sample/receiverA";
	scheduling_scheme = PFIFO;
	logging
	{
	  Is Periodic? = true;
	  Periodic Log Unit = 1000;
	}
      }
  }
}
